<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- App Title with Whimsical Style -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.05"
            android:gravity="center"
            android:fontFamily="monospace"
            android:elevation="2dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:rotation="-2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/appTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Left Column: Motion Detection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/motionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/card_motion"
            app:layout_constraintTop_toBottomOf="@id/appSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lightCard"
            app:layout_constraintWidth_percent="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motion_detection"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:layout_marginBottom="24dp" />

                <!-- Camera Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_selection"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/cameraSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/camera_selection" />

                <!-- Camera Sensitivity (only shown when camera is selected) -->
                <TextView
                    android:id="@+id/cameraSensitivityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/cameraSensitivityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone">

                    <SeekBar
                        android:id="@+id/cameraSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:paddingStart="0dp"
                        android:paddingEnd="12dp"
                        android:thumbOffset="0dp"
                        android:contentDescription="@string/sensitivity" />

                    <TextView
                        android:id="@+id/cameraValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="end"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cameraLiveReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:minHeight="22dp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Right Column: Light Detection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lightCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/card_light"
            app:layout_constraintTop_toBottomOf="@id/appSubtitle"
            app:layout_constraintStart_toEndOf="@id/motionCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/light_detection"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:layout_marginBottom="24dp" />

                <!-- Sensitivity Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <SeekBar
                        android:id="@+id/lightSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:paddingStart="0dp"
                        android:paddingEnd="12dp"
                        android:thumbOffset="0dp"
                        android:contentDescription="@string/sensitivity" />

                    <TextView
                        android:id="@+id/lightValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="end"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lightLiveReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:minHeight="22dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Card (Full Width Below) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/settingsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/card_settings"
            app:layout_constraintTop_toBottomOf="@id/motionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/startAtBootCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/start_at_boot"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:contentDescription="@string/start_at_boot" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

</FrameLayout>
