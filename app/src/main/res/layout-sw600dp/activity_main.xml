<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Motion Detection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/motionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lightCard"
            app:layout_constraintWidth_percent="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motion_detection"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/cameraInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="28dp" />

                <!-- Rear Camera Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rear_camera"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <SeekBar
                        android:id="@+id/rearCameraSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                    <TextView
                        android:id="@+id/rearCameraValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="end"
                        android:layout_marginStart="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rearCameraLiveReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="24dp"
                    android:minHeight="22dp" />

                <!-- Front Camera Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/front_camera"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <SeekBar
                        android:id="@+id/frontCameraSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                    <TextView
                        android:id="@+id/frontCameraValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="end"
                        android:layout_marginStart="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/frontCameraLiveReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:minHeight="22dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Light Detection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lightCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/motionCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/light_detection"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/lightSensorInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="28dp" />

                <!-- Sensitivity Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <SeekBar
                        android:id="@+id/lightSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />

                    <TextView
                        android:id="@+id/lightValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="end"
                        android:layout_marginStart="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lightLiveReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:minHeight="22dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
